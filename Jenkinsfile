pipeline {
    agent any

    stages {
        stage('Git clone') {
            steps {
                git 'https://github.com/shazforiot/HelloWorld-Springboot-App.git'
            }
        }
        
        stage('Maven Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Maven Build') {
            steps {
                sh 'mvn package'
            }
        }
        
        stage('Maven Deploy') {
            steps {
                echo "Deploy the war to server"
            }
        }        
    }
}

